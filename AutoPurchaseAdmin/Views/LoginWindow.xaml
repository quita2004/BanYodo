<Window x:Class="AutoPurchaseAdmin.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AutoPurchaseAdmin.ViewModels"
        xmlns:helpers="clr-namespace:AutoPurchaseAdmin.Helpers"
        Title="Admin Login" Height="200" Width="350">

    <Window.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <StackPanel>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
            <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" Margin="0,5"/>
            <Button Content="Login" Command="{Binding LoginCommand}" Margin="0,10"/>
            <TextBlock Text="{Binding Error}" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>